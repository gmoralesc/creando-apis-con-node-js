{
  "env": {
    "commonjs": true,
    "es2020": true,
    "node": true,
    "jest/globals": true
  },
  "plugins": ["jest"],
  "extends": ["airbnb-base", "prettier", "plugin:jest/recommended"],
  "parserOptions": {
    "ecmaVersion": 11
  },
  "rules": {
    "no-console": "off",
    "no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "next"
      }
    ]
  }
}
